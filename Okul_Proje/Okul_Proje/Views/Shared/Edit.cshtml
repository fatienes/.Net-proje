@model StudentDto


@{
}


<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Edit Ogrenci</h2>
    </div>

    <div class="row">
        <form method="get" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col-sm-4 col-from-label">Id</label>
                <div class="col-sm-8">
                    <input class="from-control" readonly value="@ViewData["Student.Id"]" />
                   
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-from-label">Isim</label>
                <div class="col-sm-8">
                    <input class="from-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-from-label">Soyad</label>
                <div class="col-sm-8">
                    <input class="from-control" asp-for="Surname" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-from-label">TCNO</label>
                <div class="col-sm-8">
                    <input class="from-control" asp-for="tcNumber" />
                    <span asp-validation-for="tcNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-from-label">Okul No</label>
                <div class="col-sm-8">
                    <input class="from-control" asp-for="Number" />
                    <span asp-validation-for="Number" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-from-label">Sinif</label>
                <div class="col-sm-8">
                    <select class="from-select" asp-for="classroom">
                        <option value="A">A</option>
                        <option value="B">B</option>
                        <option value="C">C</option>
                        <option value="D">D</option>
                    </select>

                </div>
            </div>
            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button formmethod="post" type="submit" class="btn btn-primary">Kaydet</button>

                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Students" asp-action="Index" role="button">Cancel</a>
                </div>

            </div>
        </form>
    </div>
